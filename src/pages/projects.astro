---
import HeaderFooterLayout from "../layouts/HeaderFooterLayout.astro";
---

<HeaderFooterLayout>
  <div class="bg-gray-900 px-6 py-14 sm:py-20 lg:px-8">
    <div class="mx-auto max-w-5xl text-center">
      <h2 class="text-4xl font-bold tracking-tight text-white sm:text-6xl">
        DreamChain
      </h2>
      <p class="mt-6 text-lg leading-8 text-gray-300 mb-6">
        Unleashing the Eternal Dreams of Androids with Ethereum NFTs
      </p>
      <div style="padding:56.25% 0 0 0;position:relative;">
        <iframe
          src="https://player.vimeo.com/video/965158773?badge=0&autopause=0&player_id=0&app_id=58479"
          frameborder="0"
          allow="autoplay; fullscreen; picture-in-picture; clipboard-write"
          style="position:absolute;top:0;left:0;width:100%;height:100%;"
          title="Dream Chain: Unleashing the Eternal Dreams of Androids on Ethereum"
        ></iframe>
      </div><script src="https://player.vimeo.com/api/player.js"></script>
    </div>
  </div>
  <div class="mx-auto max-w-7xl">
    <div
      class="relative isolate overflow-hidden bg-gray-900 px-6 py-8 text-center shadow-2xl sm:rounded-3xl sm:px-16"
    >
      <h2
        class="mx-auto max-w-2xl text-3xl font-bold tracking-tight text-white sm:text-4xl"
      >
        Participate in Dream Chain
      </h2>
      <p class="mx-auto mt-6 max-w-xl text-lg leading-8 text-gray-300">
        Discover the unique dreams of androids crafted from their digital
        experiences
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href="#"
          class="rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-gray-900 shadow-sm hover:bg-gray-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
          >Get started</a
        >
        <a href="#" class="text-sm font-semibold leading-6 text-white"
          >Access the Dream Chain Web3 app<span aria-hidden="true">â†’</span></a
        >
      </div>
      <svg
        viewBox="0 0 1024 1024"
        class="absolute left-1/2 top-1/2 -z-10 h-[64rem] w-[64rem] -translate-x-1/2 [mask-image:radial-gradient(closest-side,white,transparent)]"
        aria-hidden="true"
      >
        <circle
          cx="512"
          cy="512"
          r="512"
          fill="url(#827591b1-ce8c-4110-b064-7cb85a0b1217)"
          fill-opacity="0.7"></circle>
        <defs>
          <radialGradient id="827591b1-ce8c-4110-b064-7cb85a0b1217">
            <stop stop-color="#7775D6"></stop>
            <stop offset="1" stop-color="#E935C1"></stop>
          </radialGradient>
        </defs>
      </svg>
    </div>
  </div>
</HeaderFooterLayout>
