---
import "@fontsource-variable/roboto-mono";
import "@fontsource/roboto";

const { content } = Astro.props;
---

<html lang="en">
  <head>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-3GNF6MVMLH"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-3GNF6MVMLH");
