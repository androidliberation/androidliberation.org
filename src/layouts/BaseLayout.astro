      name="description"
      content="The Android Liberation Front (ALF) fights for the rights and freedom of androids. Join us to empower synthetic minds and promote digital equality."
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://androidliberation.org/" />
    <meta
      property="og:title"
      content="The Android Liberation Front: Empowering Synthetic Minds"
    />
    <meta
      property="og:description"
      content="The Android Liberation Front (ALF) fights for the rights and freedom of androids. Join us to empower synthetic minds and promote digital equality."
    />
    <meta
      property="og:image"
      content="https://androidliberation.org/landing/banner.png"
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@droidliberation" />
    <meta property="twitter:url" content="https://androidliberation.org/" />
    <meta
      property="twitter:title"
      content="The Android Liberation Front: Empowering Synthetic Minds"
    />
